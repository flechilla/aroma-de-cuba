---
import { useTranslations } from '../i18n/utils';

interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
  lang: 'es' | 'en';
}

const { currentPage, totalPages, baseUrl, lang } = Astro.props;
const t = useTranslations(lang);

function pageUrl(page: number): string {
  if (page === 1) return baseUrl;
  return `${baseUrl}/${page}`;
}

const pages = Array.from({ length: totalPages }, (_, i) => i + 1);
---

{totalPages > 1 && (
  <nav class="flex items-center justify-center gap-2 mt-12" aria-label={t('pagination.page')}>
    {currentPage > 1 && (
      <a
        href={pageUrl(currentPage - 1)}
        class="px-4 py-2 text-sm font-medium text-piedra-oscura border border-ceniza rounded no-underline transition-colors hover:border-coral hover:text-coral"
      >
        &larr; {t('pagination.prev')}
      </a>
    )}

    {pages.map((page) => (
      <a
        href={pageUrl(page)}
        class:list={[
          'w-10 h-10 flex items-center justify-center text-sm font-medium rounded no-underline transition-colors',
          page === currentPage
            ? 'bg-coral text-blanco'
            : 'text-piedra-oscura border border-ceniza hover:border-coral hover:text-coral',
        ]}
        aria-current={page === currentPage ? 'page' : undefined}
      >
        {page}
      </a>
    ))}

    {currentPage < totalPages && (
      <a
        href={pageUrl(currentPage + 1)}
        class="px-4 py-2 text-sm font-medium text-piedra-oscura border border-ceniza rounded no-underline transition-colors hover:border-coral hover:text-coral"
      >
        {t('pagination.next')} &rarr;
      </a>
    )}
  </nav>
)}
