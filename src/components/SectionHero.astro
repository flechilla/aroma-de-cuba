---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  imageAlt?: string;
}

const { title, description, image, imageAlt } = Astro.props;
---

<section class="relative py-20 bg-tabaco text-arena overflow-hidden min-h-80 flex items-center">
  {image && (
    <div class="absolute inset-0">
      <Image
        src={image}
        alt={imageAlt || ''}
        width={1400}
        height={500}
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-humo/85 via-humo/60 to-humo/40" aria-hidden="true"></div>
    </div>
  )}
  <div class="relative z-10 w-full max-w-[72rem] mx-auto px-6">
    <h1 class="font-display text-5xl text-arena mb-4 max-md:text-3xl">{title}</h1>
    <p class="font-heading text-xl text-ceniza max-w-[45ch] italic">{description}</p>
    <div class="tile-border max-w-30 mt-6" aria-hidden="true"></div>
  </div>
</section>
