---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import NewsletterSignup from './NewsletterSignup.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer class="mt-20 bg-humo text-ceniza">
  <div class="tile-border--thick" aria-hidden="true"></div>
  <div class="grid grid-cols-3 gap-10 py-12 pb-8 w-full max-w-[72rem] mx-auto px-6 max-md:grid-cols-1">
    <div>
      <div class="flex items-center gap-2 mb-2">
        <img src="/images/brand/zunzun-square-centered.png" alt="" class="w-10 h-10" width="40" height="40" />
        <p class="font-display text-2xl text-arena">Aroma de Cuba</p>
      </div>
      <p class="text-sm text-piedra italic mb-6">{t('home.subtitle')}</p>
      <NewsletterSignup variant="inline" lang={lang} />
    </div>

    <nav class="flex gap-10" aria-label={lang === 'es' ? 'Navegación del pie de página' : 'Footer navigation'}>
      <div>
        <h3 class="font-body text-xs font-semibold uppercase tracking-widest text-piedra mb-4">{t('footer.sections')}</h3>
        <ul class="list-none flex flex-col gap-2" role="list">
          <li><a href={getLocalizedPath('blog', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">{t('nav.news')}</a></li>
          <li><a href={getLocalizedPath(lang === 'es' ? 'historia' : 'history', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">{t('nav.history')}</a></li>
          <li><a href={getLocalizedPath('cultura', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">{t('nav.culture')}</a></li>
          <li><a href={getLocalizedPath('turismo', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">{t('nav.tourism')}</a></li>
          <li><a href={getLocalizedPath('gastronomia', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">{t('nav.gastronomy')}</a></li>
          <li><a href={getLocalizedPath('productos', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">{t('nav.products')}</a></li>
        </ul>
      </div>
      <div>
        <h3 class="font-body text-xs font-semibold uppercase tracking-widest text-piedra mb-4">{t('footer.more')}</h3>
        <ul class="list-none flex flex-col gap-2" role="list">
          <li><a href={getLocalizedPath('about', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">{t('nav.about')}</a></li>
          <li><a href={getLocalizedPath('rss.xml', lang)} class="text-sm text-ceniza no-underline transition-colors hover:text-arena">RSS Feed</a></li>
        </ul>
      </div>
    </nav>

    <p class="col-span-full text-xs text-piedra pt-6 border-t border-white/8">
      &copy; {year} Aroma de Cuba. {t('footer.rights')}
    </p>
  </div>
</footer>
