---
interface Props {
  author?: string;
}

const { author } = Astro.props;
---

<figure class="my-10 p-8 bg-arena border-l-4 border-coral rounded-r-lg relative">
  <span class="absolute top-[-0.25rem] left-4 font-display text-[4rem] text-ron/30 leading-none" aria-hidden="true">&ldquo;</span>
  <blockquote class="font-heading text-xl italic text-tabaco leading-snug border-none p-0 m-0">
    <slot />
  </blockquote>
  {author && <figcaption class="mt-3 font-body text-sm not-italic text-piedra-oscura">&mdash; {author}</figcaption>}
</figure>
