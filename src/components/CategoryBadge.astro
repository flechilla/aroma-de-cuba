---
import { useTranslations } from '../i18n/utils';

interface Props {
  category: string;
  lang?: 'es' | 'en';
}

const { category, lang = 'es' } = Astro.props;
const t = useTranslations(lang);

const label = t(`category.${category}` as any) || category;
---

<span class={`badge badge--${category}`}>
  {label}
</span>
