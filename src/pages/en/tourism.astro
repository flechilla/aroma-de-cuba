---
import BaseLayout from '@layouts/BaseLayout.astro';
import SectionLanding from '@components/SectionLanding.astro';
import { getCollection } from 'astro:content';
import { useTranslations } from '../../i18n/utils';

const lang = 'en' as const;
const t = useTranslations(lang);

const posts = (await getCollection('blog', ({ data, id }) =>
  !data.draft && id.startsWith('en/') && data.category === 'turismo'
)).sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title={t('section.turismo.metaTitle')} description={t('section.turismo.metaDescription')} lang={lang}>
  <SectionLanding
    heroTitle={t('section.turismo.heroTitle')}
    heroDescription={t('section.turismo.heroDesc')}
    intro={t('section.turismo.intro')}
    posts={posts}
    lang={lang}
    category="turismo"
  />
</BaseLayout>
