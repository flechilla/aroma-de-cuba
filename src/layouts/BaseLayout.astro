---
import '@styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import SEOHead from '@components/SEOHead.astro';
import { ClientRouter } from 'astro:transitions';
import { getLangFromUrl } from '../i18n/utils';

interface FaqItem {
  question: string;
  answer: string;
}

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  article?: boolean;
  lang?: 'es' | 'en';
  articleData?: {
    author?: string;
    datePublished?: string;
    dateModified?: string;
    category?: string;
    tags?: string[];
  };
  faqItems?: FaqItem[];
  translationSlug?: string;
  currentSlug?: string;
}

const {
  title,
  description,
  ogImage = '/og-default.svg',
  article = false,
  lang,
  articleData,
  faqItems,
  translationSlug,
  currentSlug,
} = Astro.props;

const resolvedLang = lang ?? getLangFromUrl(Astro.url);
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={resolvedLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#3D2314" />
    <meta name="facebook-domain-verification" content="wp91v272fch5tizrrx6g2kr0bzd995" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Aroma de Cuba"
      href={new URL('/rss.xml', Astro.site)}
    />
    <SEOHead
      title={title}
      description={description}
      canonicalUrl={canonicalUrl.href}
      ogImage={ogImage}
      article={article}
      lang={resolvedLang}
      articleData={articleData}
      faqItems={faqItems}
      translationSlug={translationSlug}
      currentSlug={currentSlug}
    />
    <ClientRouter />
  </head>
  <body>
    <div class="accent-stripe" aria-hidden="true"></div>
    <Header />
    <main id="main-content" class="min-h-[calc(100dvh-4.5rem-20rem)]">
      <slot />
    </main>
    <Footer />
  </body>
</html>
