---
import '@styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import SEOHead from '@components/SEOHead.astro';
import { ClientRouter } from 'astro:transitions';
import { getLangFromUrl } from '../i18n/utils';

interface FaqItem {
  question: string;
  answer: string;
}

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  article?: boolean;
  lang?: 'es' | 'en';
  articleData?: {
    author?: string;
    datePublished?: string;
    dateModified?: string;
    category?: string;
    tags?: string[];
  };
  faqItems?: FaqItem[];
  translationSlug?: string;
  currentSlug?: string;
}

const {
  title,
  description,
  ogImage = '/og-default.svg',
  article = false,
  lang,
  articleData,
  faqItems,
  translationSlug,
  currentSlug,
} = Astro.props;

// Build alternate href for language switcher (blog posts)
let alternateHref: string | undefined;
if (currentSlug && translationSlug) {
  const resolvedLang2 = lang ?? getLangFromUrl(Astro.url);
  alternateHref = resolvedLang2 === 'es' 
    ? `/en/blog/${translationSlug}/`
    : `/blog/${translationSlug}/`;
}

const resolvedLang = lang ?? getLangFromUrl(Astro.url);
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={resolvedLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#3D2314" />
    <meta name="facebook-domain-verification" content="wp91v272fch5tizrrx6g2kr0bzd995" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Aroma de Cuba"
      href={new URL('/rss.xml', Astro.site)}
    />
    <SEOHead
      title={title}
      description={description}
      canonicalUrl={canonicalUrl.href}
      ogImage={ogImage}
      article={article}
      lang={resolvedLang}
      articleData={articleData}
      faqItems={faqItems}
      translationSlug={translationSlug}
      currentSlug={currentSlug}
    />
    <ClientRouter />
    <!-- Google Analytics 4 -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-JGJJFDPTYB"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-JGJJFDPTYB');

      // --- Custom GA4 Events ---

      // 1. Scroll Depth Tracking (25%, 50%, 75%, 100%)
      (function() {
        var firedThresholds = {};
        var thresholds = [25, 50, 75, 100];
        window.addEventListener('scroll', function() {
          var docHeight = document.documentElement.scrollHeight - window.innerHeight;
          if (docHeight <= 0) return;
          var pct = Math.round((window.scrollY / docHeight) * 100);
          for (var i = 0; i < thresholds.length; i++) {
            var t = thresholds[i];
            if (pct >= t && !firedThresholds[t]) {
              firedThresholds[t] = true;
              gtag('event', 'scroll_depth', { percent_scrolled: t, page_path: location.pathname });
            }
          }
        }, { passive: true });
      })();

      // 2. Reading Time Tracking (visible time only)
      (function() {
        var startTime = Date.now();
        var totalVisible = 0;
        var isVisible = !document.hidden;

        document.addEventListener('visibilitychange', function() {
          if (document.hidden) {
            if (isVisible) totalVisible += Date.now() - startTime;
            isVisible = false;
          } else {
            startTime = Date.now();
            isVisible = true;
          }
        });

        function sendReadingTime() {
          if (isVisible) totalVisible += Date.now() - startTime;
          var seconds = Math.round(totalVisible / 1000);
          if (seconds > 0) {
            gtag('event', 'reading_time', { seconds_on_page: seconds, page_path: location.pathname });
          }
        }

        document.addEventListener('visibilitychange', function() {
          if (document.hidden) sendReadingTime();
        });
        window.addEventListener('beforeunload', sendReadingTime);
      })();

      // 3. Internal Link Click Tracking (links to /blog/ pages)
      document.addEventListener('click', function(e) {
        var link = e.target.closest('a[href]');
        if (!link) return;
        var href = link.getAttribute('href');
        if (href && (href.indexOf('/blog/') !== -1 || href.indexOf('/en/blog/') !== -1)) {
          var isInternal = href.charAt(0) === '/' || href.indexOf(location.hostname) !== -1;
          if (isInternal) {
            gtag('event', 'internal_link_click', {
              destination_url: href,
              link_text: (link.textContent || '').trim().substring(0, 100)
            });
          }
        }
      });

      // 4. Language Switch Tracking
      document.addEventListener('click', function(e) {
        var link = e.target.closest('a');
        if (!link) return;
        var parent = link.closest('.flex.items-center.gap-1.font-body.text-sm.font-medium');
        if (!parent) return;
        var currentLang = location.pathname.indexOf('/en/') === 0 || location.pathname === '/en' ? 'en' : 'es';
        var toLang = currentLang === 'es' ? 'en' : 'es';
        gtag('event', 'language_switch', { from_lang: currentLang, to_lang: toLang });
      });
    </script>
  </head>
  <body>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:z-[100] focus:bg-coral focus:text-blanco focus:px-4 focus:py-2 focus:rounded focus:font-body focus:text-sm focus:font-semibold focus:no-underline">
      {resolvedLang === 'es' ? 'Saltar al contenido' : 'Skip to content'}
    </a>
    <div class="accent-stripe" aria-hidden="true"></div>
    <Header alternateHref={alternateHref} />
    <main id="main-content" class="min-h-[calc(100dvh-4.5rem-20rem)]">
      <slot />
    </main>
    <button
      id="back-to-top"
      class="fixed bottom-6 right-6 z-40 w-10 h-10 bg-tabaco text-arena rounded-full shadow-[var(--shadow-warm-md)] flex items-center justify-center opacity-0 translate-y-4 transition-all duration-300 pointer-events-none cursor-pointer border-none hover:bg-coral"
      aria-label={resolvedLang === 'es' ? 'Volver arriba' : 'Back to top'}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path d="M5 15l7-7 7 7"/></svg>
    </button>
    <script>
      const btn = document.getElementById('back-to-top');
      if (btn) {
        window.addEventListener('scroll', () => {
          if (window.scrollY > 500) {
            btn.classList.remove('opacity-0', 'translate-y-4', 'pointer-events-none');
            btn.classList.add('opacity-100', 'translate-y-0', 'pointer-events-auto');
          } else {
            btn.classList.add('opacity-0', 'translate-y-4', 'pointer-events-none');
            btn.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
          }
        }, { passive: true });
        btn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));
      }
    </script>
    <Footer />
  </body>
</html>
